{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@frontend/*": ["../frontend/src/*"],
      "#app/*": ["./src/*"]
    },
    "jsx": "react"
  },
  "include": ["src", ".eslintrc.cjs"]
}
